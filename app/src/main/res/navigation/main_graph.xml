<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main_graph"
    app:startDestination="@+id/nav_dressing">

    <fragment
        android:id="@+id/nav_dressing"
        android:name="com.digitalwardrobe.ui.dressing.DressingFragment"
        android:label="@string/menu_dressing"
        tools:layout="@layout/dressing_fragment" />

    <fragment
        android:id="@+id/nav_wardrobe"
        android:name="com.digitalwardrobe.ui.wardrobe.WardrobeFragment"
        android:label="@string/menu_wardrobe"
        tools:layout="@layout/wardrobe_fragment">

        <action
            android:id="@+id/action_wardrobe_to_details"
            app:destination="@id/wearableDetailsFragment" />
    </fragment>

    <fragment
        android:id="@+id/nav_profile"
        android:name="com.digitalwardrobe.ui.profile.ProfileFragment"
        android:label="@string/menu_profile"
        tools:layout="@layout/profile_fragment" />

    <fragment
        android:id="@+id/settingsFragment"
        android:name="com.digitalwardrobe.SettingsFragment"
        android:label="SettingsFragment" />
    <action
        android:id="@+id/action_global_settingsFragment"
        app:destination="@id/settingsFragment"
        app:popUpTo="@id/settingsFragment" />

    <fragment
        android:id="@+id/wearableDetailsFragment"
        android:name="com.digitalwardrobe.WearableDetailsFragment"
        android:label="Wearable Details"
        tools:layout="@layout/wearable_details_fragment">
        <argument
            android:name="wearableId"
            app:argType="string"/>
    </fragment>

</navigation>